<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml" application="lab1.xml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">


  <!-- disable bargein for this dialog -->
  <property name="bargein" value="false"/>


  <!-- Data model -->
  <var name="from" />
  <var name="to" />
  <var name="date" />
  <var name="rturn" />
  <var name="oneway" />
  <var name="confirmoneway" />
  <var name="confirmrturn" />

  <!-- State machine -->
  <form id="welcome">
    <block>
      <prompt>
        <break time="2000" />
        Welcome to the flight booking service.
      </prompt>
      <goto next="#askFrom" />
    </block>
  </form>

  <form id="askFrom">
    <field name="fromField">
      <prompt>
        What city are you leaving from?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
      <nomatch>
        I didn't understand. You can say London, Paris or New York.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say London, Paris or New York.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="from" expr="fromField" />
      <goto next="#askTo" />
    </filled>
  </form>

  <form id="askTo">
    <field name="toField">
      <prompt timeout="8s">
        Where are you going?
      </prompt>
      <option>london</option>
      <option>paris</option>
      <option>new york</option>
      <nomatch>
        I didn't understand. You can say London, Paris or New York.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say London, Paris or New York.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="to" expr="toField" />
      <if cond="to == from"/>
        <prompt>
          You can't fly to the same city you are leaving from.
        </prompt>
        <clear namelist="to"/>
        <reprompt/>
      <else/>
        <goto next="#askDate" />
    </filled>
  </form>

  <form id="askDate">
    <field name="dateField">
      <prompt>
        What date do you want to leave?
      </prompt>
      <option>tomorrow</option>
      <option>monday</option>
      <option>tuesday</option>
      <option>wednesday</option>
      <option>thursday</option>
      <option>friday</option>
      <option>saturday</option>
      <option>sunday</option>
      <nomatch>
        I didn't understand. You can say tomorrow or any weekday from Monday to Sunday.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say tomorrow, Monday, Tuesday, Wednesday, Thursday, Friday, Saturday or Sunday.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="date" expr="dateField" />
      <goto next="#askOneway" />
    </filled>
  </form>

  <form id="askOneway">
    <field name="onewayField">
      <prompt>
        Is it a one-way trip?
      </prompt>
      <option>yes</option>
      <option>no</option>
      <nomatch>
        I didn't understand. You can say either yes or no.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say yes or no.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="oneway" expr="onewayField" />
      <if cond="oneway == 'yes'" />
        <goto next="#askConfirmoneway" />
      <else/>
        <goto next="#askRturn" />
    </filled>
  </form>

  <form id="askRturn">
    <field name="rturnField">
      <prompt>
        What date do you want to rturn?
      </prompt>
      <option>tomorrow</option>
      <option>monday</option>
      <option>tuesday</option>
      <option>wednesday</option>
      <option>thursday</option>
      <option>friday</option>
      <option>saturday</option>
      <option>sunday</option>
    </field>
    <nomatch>
        I didn't understand. You can say tomorrow or any weekday from Monday to Sunday.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say tomorrow, Monday, Tuesday, Wednesday, Thursday, Friday, Saturday or Sunday.
        <reprompt/>
      </noinput>
    <filled>
      <assign name="rturn" expr="rturnField" />
      <goto next="#askConfirmrturn" />
    </filled>
  </form>

  <form id="askConfirmoneway">
    <field name="confirmonewayField">
      <prompt>
        Do you want to travel from <value expr="from"/> to <value expr="to"/> on <value expr="date"/>?
      </prompt>
      <option>yes</option>
      <option>no</option>
      <nomatch>
        I didn't understand. You can say either yes or no.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say yes or no.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="confirmoneway" expr="confirmonewayField" />
      <if cond="confirmoneway == 'yes'" />
        <promt>
          Your flight has been booked.
        </promt>
      <else/>
        <goto next ="#askFrom" />
    </filled>
  </form>

   <form id="askConfirmrturn">
    <field name="confirmrturnField">
      <prompt>
        Do you want to travel from <value expr="from"/> to <value expr="to"/> on <value expr="date"/> returning
        on <value expr="rturn"/>?
      </prompt>
      <option>yes</option>
      <option>no</option>
      <nomatch>
        I didn't understand. You can say either yes or no.
        <reprompt/>
      </nomatch>
      <noinput>
        You didn't say anything. Please say yes or no.
        <reprompt/>
      </noinput>
    </field>
    <filled>
      <assign name="confirmrturn" expr="confirmrturnField"/>
      <if cond="confirmrturn == 'yes'"/>
        <promt>
          Your flight has been booked.
        </promt>
      <else/>
        <goto next ="#askFrom"/>
    </filled>
  </form>
</vxml>


