<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">

  <form id="booking">
    <grammar src="flightbooking4.xml"/>
      <initial>
        How would you like to travel?
      </initial>

    <field id="origin">
      <grammar src="flightbooking4.xml#FROM"/>
    </field>

    <field id="destination">
      <grammar src="flightbooking4.xml#TO"/>
    </field>

    <field id="day">
      <grammar src="flightbooking4.xml#DAY"/>
    </field>

    <field id="month">
      <grammar src="flightbooking4.xml#MONTH"/>
    </field>

  <filled mode="all" namelist="booking">          .....what about this one?
    <prompt>
      You want to travel<value expr="booking"/>
   </prompt>
  </filled>

 </form>
</vxml>