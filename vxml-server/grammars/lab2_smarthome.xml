<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="command">

  <rule id="object">
    <one-of>
      <item> light </item>
      <item> lights <tag> out = 'light'; </tag></item>
      <item> heat </item>
      <item> heater <tag> out = 'heat'; </tag></item>
      <item> A C <tag> out = 'air conditioning'; </tag></item>
      <item> air conditioning </item>
      <item> window </item>
      <item> windows <tag> out = 'window' </tag></item>
      <item> door </item>
    </one-of>
  </rule>

  <rule id="action">
  <one-of>
     <item> turn off </item>
     <item> tun on </item>
     <item> open </item>
     <item> close </item>
  </one-of>
  </rule>

  <rule id="command" scope="public">
    <example> ?please turn off the light <tag>{"object": "light", "action": "off"}</tag></example>
    <example> ?please turn on the light <tag>{"object": "light", "action": "on"}</tag></example>
    <example> ?please turn off the air conditioning <tag>{"object": "air conditioning", "action": "off"}</tag></example>
    <example> ?please turn on the AC <tag>{"object": "air conditioning", "action": "on"}</tag></example>
    <example> ?please turn on the heat <tag>{"object": "heat", "action": "on"}</tag></example>
    <example> ?please turn off the heat <tag>{"object": "heat", "action": "on"}</tag></example>
    <example> ?please open the window <tag>{"object": "window", "action": "open"}</tag></example>
    <example> ?please close the window <tag>{"object": "window", "action": "close"}</tag></example>
    <example> ?please close the door <tag>{"object": "door", "action": "close"}</tag></example>
    <example> ?please open the door <tag>{"object": "door", "action": "close"}</tag></example>
   <ruleref uri="#action"/>
   <ruleref uri="#object"/>
  </rule>



</grammar>
